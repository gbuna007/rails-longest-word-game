<h1>New Game</h1>

<ul class="list-inline">
  <% @letters.each do |letter| %>
    <li class="list-inline-item"><%= letter %></li>
  <% end %>
</ul>

<p>What is the longest word you can find?</p>
<form action="/score" method="post" data-turbo="false">
  <input class="form-control w-50" type="text" name="word">
  <button type="submit" class="btn btn-primary my-3">Play</button>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag 'letters', @letters %>
</form>
